[user]
	name = Stu W
	email = stubillwhite@gmail.com
[push]
    default = simple
[alias]
    logv = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
    diff-base = !git diff $(git merge-base --fork-point master)
    difftool-base = !git difftool -y $(git merge-base --fork-point master)
[core]
	editor = nvim
	autocrlf = input
[diff]
	tool = vimdiff
[difftool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL
[merge]
    tool = vimmmerge
[mergetool]
    prompt = true
[mergetool "vimmmerge"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[credential]
	helper = osxkeychain
