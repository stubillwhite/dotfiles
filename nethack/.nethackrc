# https://alt.org/nethack/userdata/E/Eidolos/Eidolos.nh343rc

########################################
# Currently playing
########################################

OPTIONS=role:wizard
OPTIONS=gender:female
OPTIONS=race:elf
OPTIONS=align:chaotic

########################################
# General options
########################################

OPTIONS=name:White
OPTIONS=nonews
OPTIONS=hilite_pet,boulder:0
OPTIONS=number_pad=0,extmenu,menustyle:combination
OPTIONS=autopickup,pickup_types:$,pushweapon
OPTIONS=showexp,showscore,time,toptenwin
OPTIONS=DECGraphics
OPTIONS=color,menucolors,statushilites
OPTIONS=!implicit_uncursed

########################################
# Colours
########################################

# red, green, brown, blue, magenta, cyan, gray, orange, bright-green,
# yellow, bright-blue, bright-magenta, bright-cyan, white

# Items
MENUCOLOR="blessed"=cyan&underline
MENUCOLOR="cursed"=red&bold
MENUCOLOR="uncursed"=green

# Forgotten spells
MENUCOLOR="[a-zA-Z] - [a-zA-Z ]+[ ]+[0-9]+\*[ ]+[a-z]+[ ]+[0-9]+%"=magenta

# Hitpoints and prayer threshold
OPTIONS=hilite_status:hitpoints/100%/cyan&underline
OPTIONS=hilite_status:hitpoints/<100%/green
OPTIONS=hilite_status:hitpoints/<60%/yellow
OPTIONS=hilite_status:hitpoints/<40%/red
OPTIONS=hilite_status:hitpoints/<14%/magenta&underline

# Power
OPTIONS=hilite_status:power/100%/cyan&underline
OPTIONS=hilite_status:power/<100%/green
OPTIONS=hilite_status:power/<60%/yellow
OPTIONS=hilite_status:power/<40%/red
OPTIONS=hilite_status:power/<20%/magenta&underline

# Encumbrance
OPTIONS=hilite_status:carrying-capacity/burdened/yellow
OPTIONS=hilite_status:carrying-capacity/stressed/red

